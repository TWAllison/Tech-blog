<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5 gx-4 mb-4">
            <section class="sign-in-form">
                <h2>Sign In</h2>
                <form class="signinform">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" class="form-control" id="username-signin" placeholder="Username">
                    </div>
                    <div class="form-group">
                         <label for="password">Password</label>
                        <input type="password" class="form-control" id="password-signin" placeholder="Password">
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-primary" id="btn-signin" type="submit">Sign In</button>
                        <div><a class="btn my-2" id="btn-signup" href="/signup" rel="noreferrer noopener"><span>No account? >>> <strong>Sign Up Today!</strong></span></a></div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

<script src="../public/js/signin.js"></script>